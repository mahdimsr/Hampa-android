<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ErrorActivity">


   <ImageView
       android:id="@+id/bgImageView"
       android:layout_width="match_parent"
       android:layout_height="500dp"
       app:layout_constraintTop_toTopOf="parent"
       android:padding="@dimen/space"
       android:src="@drawable/bg_server_error"/>

    <ir.vanda.hampa.component.VandaTextView
        android:id="@+id/errorText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/serverError"
        android:textColor="@color/colorTextPrimary"
        android:textSize="20sp"
        android:gravity="center"
        app:fontName="iranSansMedium"
        app:layout_constraintTop_toBottomOf="@id/bgImageView"/>

</androidx.constraintlayout.widget.ConstraintLayout>