<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MainFragment">

    <!-- statusBar -->
    <ir.vanda.hampa.component.StatusBar
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

    </ir.vanda.hampa.component.StatusBar>


    <!-- searchBar -->
    <ir.vanda.hampa.component.HampaSearchView
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/space"
        android:layout_marginTop="@dimen/space"
        android:layout_marginEnd="@dimen/space"
        app:layout_constraintTop_toBottomOf="@id/statusBar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/statusBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="55dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- scholarships -->
                <RelativeLayout
                    android:id="@+id/scholarshipsLayout"
                    style="@style/MainMenuItem"
                    android:layout_width="120dp"
                    android:layout_height="200dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">


                    <ir.vanda.hampa.component.RoundedImageView
                        style="@style/MainMenuItem.Image"
                        android:src="@drawable/scholarships" />


                    <ir.vanda.hampa.component.RoundedImageView
                        style="@style/MainMenuItem.Hover" />


                    <ir.vanda.hampa.component.VandaTextView
                        style="@style/MainMenuItem.Title"
                        android:text="@string/scholarships" />


                </RelativeLayout>


                <!-- lessonExam -->
                <RelativeLayout
                    android:id="@+id/lessonExamLayout"
                    style="@style/MainMenuItem"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/scholarshipsLayout"
                    app:layout_constraintStart_toStartOf="parent">


                    <ir.vanda.hampa.component.RoundedImageView
                        style="@style/MainMenuItem.Image"
                        android:src="@drawable/lesson_exam" />


                    <ir.vanda.hampa.component.RoundedImageView
                        style="@style/MainMenuItem.Hover" />


                    <ir.vanda.hampa.component.VandaTextView
                        style="@style/MainMenuItem.Title"
                        android:text="@string/lessonExams" />


                </RelativeLayout>


                <!-- books -->
                <RelativeLayout
                    android:id="@+id/helper_books"
                    style="@style/MainMenuItem"
                    android:layout_width="0dp"
                    android:layout_height="312dp"
                    android:layout_marginStart="@dimen/halfSpace"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/giftExam"
                    app:layout_constraintTop_toBottomOf="@id/scholarshipsLayout">


                    <ir.vanda.hampa.component.RoundedImageView
                        style="@style/MainMenuItem.Image"
                        android:src="@drawable/books" />


                    <ir.vanda.hampa.component.RoundedImageView
                        style="@style/MainMenuItem.Hover" />


                    <ir.vanda.hampa.component.VandaTextView
                        style="@style/MainMenuItem.Title"
                        android:text="@string/helper_books" />


                </RelativeLayout>


                <!-- giftExam -->
                <RelativeLayout
                    android:id="@+id/giftExam"
                    style="@style/MainMenuItem"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_marginEnd="@dimen/halfSpace"
                    app:layout_constraintEnd_toStartOf="@id/helper_books"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lessonExamLayout">


                    <ir.vanda.hampa.component.RoundedImageView
                        style="@style/MainMenuItem.Image"
                        android:src="@drawable/gift_exam" />


                    <ir.vanda.hampa.component.RoundedImageView
                        style="@style/MainMenuItem.Hover" />


                    <ir.vanda.hampa.component.VandaTextView
                        style="@style/MainMenuItem.Title"
                        android:text="@string/giftExam"
                        />


                </RelativeLayout>


                <!-- generalExam -->
                <RelativeLayout
                    android:id="@+id/generalExam"
                    style="@style/MainMenuItem"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_marginEnd="@dimen/space"
                    app:layout_constraintEnd_toStartOf="@id/helper_books"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/giftExam">


                    <ir.vanda.hampa.component.RoundedImageView
                        style="@style/MainMenuItem.Image"
                        android:src="@drawable/gift_exam" />


                    <ir.vanda.hampa.component.RoundedImageView
                        style="@style/MainMenuItem.Hover" />


                    <ir.vanda.hampa.component.VandaTextView
                        style="@style/MainMenuItem.Title"
                        android:text="@string/generalExams"
                        />


                </RelativeLayout>


                <!-- onlineClass -->
                <RelativeLayout
                    android:id="@+id/onlineClass"
                    style="@style/MainMenuItem"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="@dimen/space"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/helper_books">


                    <ir.vanda.hampa.component.RoundedImageView
                        style="@style/MainMenuItem.Image"
                        android:src="@drawable/gift_exam" />


                    <ir.vanda.hampa.component.RoundedImageView
                        style="@style/MainMenuItem.Hover" />


                    <ir.vanda.hampa.component.VandaTextView
                        style="@style/MainMenuItem.Title"
                        android:text="@string/onlineBooks"
                        />


                </RelativeLayout>


                <!-- meAndThe-->
                <RelativeLayout
                    android:id="@+id/meAndThe"
                    style="@style/MainMenuItem"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_marginEnd="@dimen/space"
                    app:layout_constraintEnd_toStartOf="@id/discussion"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/onlineClass">


                    <ir.vanda.hampa.component.RoundedImageView
                        style="@style/MainMenuItem.Image"
                        android:src="@drawable/books" />


                    <ir.vanda.hampa.component.RoundedImageView
                        style="@style/MainMenuItem.Hover" />


                    <ir.vanda.hampa.component.VandaTextView
                        style="@style/MainMenuItem.Title"
                        android:text="@string/onlineBooks"
                        />


                </RelativeLayout>

                <!-- discussion -->
                <RelativeLayout
                    android:id="@+id/discussion"
                    style="@style/MainMenuItem"
                    android:layout_width="0dp"
                    android:layout_height="125dp"
                    android:layout_marginEnd="@dimen/space"
                    app:layout_constraintStart_toEndOf="@id/meAndThe"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/onlineClass">


                    <ir.vanda.hampa.component.RoundedImageView
                        style="@style/MainMenuItem.Image"
                        android:src="@drawable/books" />


                    <ir.vanda.hampa.component.RoundedImageView
                        style="@style/MainMenuItem.Hover" />


                    <ir.vanda.hampa.component.VandaTextView
                        style="@style/MainMenuItem.Title"
                        android:text="@string/discussion"
                        />


                </RelativeLayout>



            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>