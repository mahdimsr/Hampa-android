<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">#00FFFFFF</item>
    </style>

    <style name="bottomMenuItem">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="bottomMenuItem.Icon">

        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">@dimen/halfSpace</item>

    </style>


    <style name="bottomMenuItemDot">

        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:padding">1dp</item>
        <item name="android:src">@drawable/ic_bottom_menu_dot</item>
        <item name="android:tint">@color/colorTextPrimary</item>

    </style>


    <style name="MainMenuItem">

        <item name="android:layout_marginTop">@dimen/space</item>
        <item name="android:layout_marginBottom">@dimen/space</item>
        <item name="android:layout_marginStart">@dimen/space</item>
        <item name="android:layout_marginEnd">@dimen/space</item>

    </style>

    <style name="MainMenuItem.Image">

        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="radius">50</item>
        <item name="android:background">#fff</item>

    </style>


    <style name="MainMenuItem.Hover">

        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/fg_main_item</item>
        <item name="radius">50</item>

    </style>

    <style name="MainMenuItem.Title">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/space</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#fff</item>
        <item name="fontName">iranSansMedium</item>

    </style>


    <style name="ProfileItemMenu">

        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.33</item>
        <item name="android:padding">@dimen/space</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>

    </style>


    <style name="ProfileItemMenuIcon">

        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">@dimen/space</item>

    </style>


    <style name="ProfileItemMenuTitle">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontName">iranSansLight</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">@dimen/halfSpace</item>

    </style>


    <!-- lessonExam details ==> start -->

    <style name="column">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:layout_marginTop">@dimen/space</item>

    </style>

    <style name="title">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="fontName">iranSansMedium</item>

    </style>

    <style name="title.value">

        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">@dimen/space</item>

    </style>


    <!-- lessonExam details ==> end -->


    <!-- payment ==> start -->

    <style name="priceDetails">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="fontName">iranSansLight</item>
        <item name="android:textSize">16sp</item>

    </style>


    <!-- payment ==> end -->

    <!-- cart ==> start -->

    <style name="cartDetails">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:textColor">#fff</item>
        <item name="fontName">iranSansMedium</item>
        <item name="android:textSize">16sp</item>

    </style>

    <!-- cart ==> end -->


    <!-- modules ==> start -->
    <style name="Line">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#ebebeb</item>

    </style>


    <style name="formError">

        <item name="fontName">iranSansLight</item>
        <item name="android:textColor">@color/colorHasError</item>
        <item name="android:textSize">15sp</item>
        <item name="android:visibility">gone</item>

    </style>


    <style name="checkBoxGradeLessonExam">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:layout_margin">@dimen/halfSpace</item>
        <item name="bgDrawable">@drawable/bg_grade_checkbox</item>
        <item name="tintColor">@color/colorCheckBoxGrade</item>

    </style>


    <style name="checkBoxOrientationLessonExam">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:layout_margin">@dimen/halfSpace</item>
        <item name="bgDrawable">@drawable/bg_orientation_checkbox</item>
        <item name="tintColor">@color/colorCheckBoxOrientation</item>

    </style>

    <!-- modules ==> end -->

    <!-- profile ==> start -->

    <style name="profile_input">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <!-- profile ==> end -->


    <!-- transaction view holder ==> start-->

    <style name="transactionRow">

        <item name="android:paddingTop">@dimen/halfSpace</item>
        <item name="android:paddingBottom">@dimen/halfSpace</item>

    </style>


    <style name="transactionItem">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
        <item name="fontName">iranSansMedium</item>
        <item name="android:textColor">#fff</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">18sp</item>

    </style>

    <!-- transaction view holder ==> end-->

    <!-- dialog button ==> start -->

    <style name="buttonDialog">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:padding">@dimen/space</item>
        <item name="android:gravity">center</item>
        <item name="fontName">iranSansMedium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:layout_margin">@dimen/halfSpace</item>

    </style>

    <!-- dialog button ==> end -->


    <!-- options - questionComponent ==> start -->

    <style name="questionOption">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingStart">@dimen/space</item>
        <item name="android:paddingEnd">@dimen/space</item>
        <item name="android:paddingTop">@dimen/halfSpace</item>
        <item name="android:paddingBottom">@dimen/halfSpace</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="fontName">iranSansLight</item>

    </style>

    <!-- options - questionComponent ==> end -->


    <!-- result - purpleLayout ==> start-->

    <style name="titleRow">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:gravity">center</item>
        <item name="fontName">iranSansMedium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#fff</item>


    </style>

    <style name="valueRow">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:gravity">left</item>
        <item name="fontName">iranSansMedium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#fff</item>

    </style>


    <!-- result - purpleLayout ==> end-->

</resources>
