<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">#00FFFFFF</item>
    </style>

    <style name="bottomMenuItem">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="bottomMenuItem.Icon">

        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">@dimen/halfSpace</item>

    </style>


    <style name="bottomMenuItemDot">

        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:padding">1dp</item>
        <item name="android:src">@drawable/ic_bottom_menu_dot</item>
        <item name="android:tint">@color/colorTextPrimary</item>

    </style>


    <style name="MainMenuItem">

        <item name="android:layout_marginTop">@dimen/space</item>
        <item name="android:layout_marginBottom">@dimen/space</item>
        <item name="android:layout_marginStart">@dimen/space</item>
        <item name="android:layout_marginEnd">@dimen/space</item>

    </style>

    <style name="MainMenuItem.Image">

        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="radius">50</item>

    </style>


    <style name="MainMenuItem.Hover">

        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/fg_main_item</item>
        <item name="radius">50</item>

    </style>

    <style name="MainMenuItem.Title">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/space</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#fff</item>
        <item name="fontName">iranSansMedium</item>

    </style>


    <style name="ProfileItemMenu">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.33</item>
        <item name="android:padding">@dimen/space</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>

    </style>


    <style name="ProfileItemMenuIcon">

        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">@dimen/space</item>

    </style>


    <style name="ProfileItemMenuTitle">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontName">iranSansLight</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">@dimen/halfSpace</item>

    </style>



    <!-- modules -->
    <style name="Line">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#ebebeb</item>

    </style>

</resources>
